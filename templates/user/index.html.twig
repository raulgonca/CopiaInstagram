{% block body %}


        {% for user in users %}
            
                <h2>{{ user.username }}</h2>
        {% if user==app.user %}
                <div>
                    <a href="{{ path('app_user_edit', {'id': user.id}) }}">edit</a>
                </div>
            {% endif %}
