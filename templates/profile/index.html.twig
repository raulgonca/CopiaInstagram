{% extends 'base.html.twig' %}

{% block title %}{{ user.username }}'s Profile{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header">
                    <h2>{{ user.username }}'s Profile</h2>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            <img src="{{ asset('uploads/profile_pictures/' ~ (user.profilePicture ?? 'default.jpg')) }}" 
                                 class="img-fluid rounded-circle" alt="Profile picture">
                        </div>
                        <div class="col-md-8">
                            <h4>{{ user.username }}</h4>
                            <p>{{ user.email }}</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}